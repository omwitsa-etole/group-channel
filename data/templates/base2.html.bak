<!DOCTYPE html>
<html lang="en">
<head>
	{% block title %}<title></title>{% endblock %}
	<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
	{% load static %}
	<link rel="stylesheet" href="{%static 'css/style.css'%}">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<style>
</style>
{% load static %}
<script src="{%static 'js/script.js'%}"></script>
<script src="{%static 'js/script.js'%}"></script>

<script>
function copy(id)
{
var copyTextarea = id;
copyTextarea.select(); 
document.execCommand("copy"); 
}
function showmenu(id)
{ 
	var menu = document.getElementById(id);    
	if (menu.style.display == "none"){ 
		menu.style.display = 'block'; 
	}else{   
		menu.style.display = 'none'; 
	} 
}
</script>
<body>
	<div id="myDIV">
	  <a href="/video/in/"><button class="menu_btn">Home</button></a>
	  <a href="/admin/"><button class="menu_btn">Admin</button></a>
	  <div class="dropdown">
	  <a class="menu_btn">+Upload</a>
	  <div class="dropdown_content">
	  <a href="{{ user.get_absolute_url }}">Video</a>
	  <a href="{{ user.get_another_url }}">Image</a>
	  </div>
	  </div>
	  <div id="menu_div">
	  <div>
	  <form action="{% url 'index'%}" >
	  <input type="text" placeholder="Search" name="search" id="myinput">
	  </form>
	  </div>
	  <a href="{% url 'my_settings' %}"><button class="menu_btn">Settings</button></a>
	  <a href="{% url 'logout' %}"><button class="menu_btn" id="out">Logout</button></a>
	  </div>
	  
	</div>
	<div class="container_fluid">
		<div class="row">
			<div class="col-sm-10">
			<div>
			you are <strong>{{ user.username }}</strong>
			</div>
			<div>
			{% block content %}
			{% endblock %}
			</div>
			</div>
		</div>
	</div>
</body>
</html>