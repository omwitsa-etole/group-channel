{% extends "settings.html" %}
{% block cont %}
	<div id="changepass">
	<h1>Change Password</h1>
		<div class="change_pass_form">
		<form method="POST" action="" enctype="multipart/form-data">{% csrf_token %}
			Old  password: <input type="password" name="old_password" style="padding: 6px 15px;margin-top: 2%;"><br>
			New Password: <input type="password" id="password" name="new_password" style="padding: 6px 15px;margin-top: 2%;"><br>
			Password again: <input type="password" name="confirm_password" style="padding: 6px 15px;margin-top: 2%;"><br>
			<input type="checkbox" onchange="showpass()" >show password<br>
			<input type="submit" value="Update" name="update">
		</form>
		</div>
	</div>
{% endblock%}
